<div class="row">
	<div class="column grid_6">
		<div class="row">
			<div class="column">
				<% form_for :stock, :url => {:action => :topic_send} do |f|%>
				<p>
					Sendet eine JSON Nachricht an den Topic Exchange <strong>stocks</strong>.
				</p>

				<div class="row">
					<div class="column grid_4">
						<%= f.label :stock, 'Stock' %>
					</div>
					<div class="column grid_2">
						<%= f.label :amount, 'Amount' %>
					</div>
				</div>
		
				<div class="row">
					<div class="column grid_4">
						<%= f.select :stock, @stocks %>
					</div>
					<div class="column grid_2">
						<%= f.select :amount, (1..10) %>
					</div>
				</div>
				<div class="row">
					<div class="column grid_4">
						<p><%= f.submit "Send message" %></p>
					</div>
				</div>
				<% end %>
			</div>
		</div>
